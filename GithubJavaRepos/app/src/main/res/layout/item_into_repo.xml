<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/space16"
    android:layout_marginRight="@dimen/space16"
    android:layout_marginTop="@dimen/space8"
    android:background="@drawable/border_bottom"
    android:weightSum="5">

    <TextView
        android:id="@+id/pull_request_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorRoyalblue"
        android:textSize="@dimen/text20"
        tools:text="@string/app_name"
        android:layout_marginTop="@dimen/space8"/>

    <TextView
        android:id="@+id/pull_request_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorDkGray"
        android:textSize="@dimen/text14"
        tools:text="@string/app_name" />

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/owner_pr_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/pull_request_description"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/space8"
        android:layout_marginBottom="@dimen/space8">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/img_pr_owner"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_profile"
            tools:tint="@color/colorDkGray" />

        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/owner_pr_layout_names"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space8"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorRoyalblue"
                android:textAlignment="viewStart"
                android:textSize="@dimen/text14"
                tools:text="@string/app_name" />

            <TextView
                android:id="@+id/profile_surname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGray"
                android:textAlignment="viewStart"
                android:textSize="@dimen/text14"
                tools:text="@string/app_name" />

        </android.support.v7.widget.LinearLayoutCompat>

    </android.support.v7.widget.LinearLayoutCompat>

</android.support.v7.widget.LinearLayoutCompat>
